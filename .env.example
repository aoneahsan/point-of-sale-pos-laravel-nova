APP_NAME="POS System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=pos_system
DB_USERNAME=root
DB_PASSWORD=

# Session Configuration (using Redis for better performance)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting & Filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Queue Configuration (using Redis for better performance)
QUEUE_CONNECTION=redis

# Cache Configuration (using Redis for better performance)
CACHE_STORE=redis
CACHE_PREFIX=pos

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_SESSION_DB=3

# Memcached Configuration (optional, if using memcached)
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211

# Mail Configuration
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@possystem.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (for S3 storage if needed)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Laravel Nova Configuration
NOVA_LICENSE_KEY=
NOVA_PATH=admin

# Stripe Payment Configuration
STRIPE_KEY=pk_test_your_publishable_key
STRIPE_SECRET=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# POS System Configuration
POS_DEFAULT_TAX_RATE=0.00
POS_DEFAULT_CURRENCY=USD
POS_DEFAULT_CURRENCY_SYMBOL=$
POS_LOW_STOCK_THRESHOLD=10
POS_PREVENT_NEGATIVE_STOCK=true
POS_RECEIPT_LOGO_PATH=storage/receipt-logo.png
POS_RECEIPT_FOOTER_TEXT="Thank you for your business!"
POS_ENABLE_LOYALTY_POINTS=true
POS_LOYALTY_POINTS_RATIO=100
POS_REFUND_DAYS_LIMIT=30
POS_REQUIRE_REFUND_APPROVAL=true
POS_ENABLE_OFFLINE_MODE=true

# API Configuration
API_RATE_LIMIT=60

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:3000
SANCTUM_TOKEN_EXPIRATION=null

# CORS Configuration
# Comma-separated list of allowed origins for CORS (e.g., https://app.example.com,https://mobile.example.com)
# Use "*" for development only, specify exact domains in production
CORS_ALLOWED_ORIGINS="*"
